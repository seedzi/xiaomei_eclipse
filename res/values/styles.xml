<resources
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ptr="http://schemas.android.com/apk/res/com.xiaomei.yanyu">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <!-- Application theme. -->
    <!-- Activity主题 --> 
    <style name="activityTheme" parent="@android:style/Theme.NoTitleBar"> 
        <item name="android:windowIsTranslucent">true</item> 
    </style> 
    
    <style name="Theme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="vpiTabPageIndicatorStyle">@style/Widget.TitleTabPageIndicator</item>
    </style>
    
    <style name="ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/color_titlebar_background</item>
    </style>
    
    <style name="DashboardButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:width">100dp</item>
        <item name="android:height">100dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/accent_1</item>
    </style>
    
    
    <style name="PauseDialog" parent="@android:style/Theme.Dialog">  
        <item name="android:windowTitleStyle">@style/PauseDialogTitle</item>  
    </style>  
    <style name="PauseDialogTitle" parent="@android:style/TextAppearance.DialogWindowTitle">  
        <item name="android:gravity">center_horizontal</item>  
    </style>  
    
    <style name="update_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="Widget.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textSelectHandleLeft" tools:ignore="NewApi">?android:attr/textSelectHandleLeft</item>
        <item name="android:textSelectHandleRight" tools:ignore="NewApi">?android:attr/textSelectHandleRight</item>
        <item name="android:textSelectHandle" tools:ignore="NewApi">?android:attr/textSelectHandle</item>
        <item name="android:textEditPasteWindowLayout" tools:ignore="NewApi">?android:attr/textEditPasteWindowLayout</item>
        <item name="android:textEditNoPasteWindowLayout" tools:ignore="NewApi">?android:attr/textEditNoPasteWindowLayout</item>
        <item name="android:textEditSidePasteWindowLayout" tools:ignore="NewApi">?android:attr/textEditSidePasteWindowLayout</item>
        <item name="android:textEditSideNoPasteWindowLayout" tools:ignore="NewApi">?android:attr/textEditSideNoPasteWindowLayout</item>
        <item name="android:textEditSuggestionItemLayout" tools:ignore="NewApi">?android:attr/textEditSuggestionItemLayout</item>
        <item name="android:textCursorDrawable" tools:ignore="NewApi">?android:attr/textCursorDrawable</item>
    </style> 
    <style name="Widget">
    </style>

    <style name="ListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/background_dark_gray</item>
        <item name="android:divider">@null</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
    </style>

    <style name="ListView.Divider">
        <item name="android:showDividers">middle|end</item>
        <item name="android:divider">@color/divider</item>
        <item name="android:dividerHeight">@dimen/divider</item>
    </style>

    <style name="Widget.TitleTabPageIndicator">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/title_tab_indicator</item>
        <item name="android:textAppearance">@style/TextAppearance.TitleTab</item>
    </style>

    <style name="TopFilter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/top_filter_height</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:divider">@drawable/divider</item>
        <item name="android:dividerPadding">@dimen/top_filter_divider_padding</item>
        <item name="android:showDividers">middle</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="FilterLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:divider">@drawable/divider</item>
        <item name="android:orientation">vertical</item>
        <item name="android:showDividers">middle</item>
    </style>

    <style name="MerchantRateText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/merchant_rate_text</item>
    </style>

    <style name="UserSharesActionText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/user_shares_action_space</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:drawablePadding">@dimen/user_shares_action_drawable_padding</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:textColor">@color/color_gray</item>
        <item name="android:textSize">@dimen/user_shares_action_text</item>
    </style>
    
    <style name="TextAppearance" />
    
    <style name="TextAppearance.Filter">
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="TextAppearance.Filter.Item">
        <item name="android:textColor">@color/filter_item_text</item>
    </style>
    
    <style name="TextAppearance.Filter.Title">
        <item name="android:textColor">@color/filter_title_text</item>
    </style>

    <style name="TextAppearance.TitleTab">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="ActionBarTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">@dimen/title_text</item>
        <item name="@color/title_text">@color/title_text</item>
    </style>
</resources>
