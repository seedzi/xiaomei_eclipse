<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
        </shape>
    </item>
    <item
        android:left="@dimen/title_tab_indicator_padding_horizontal"
        android:right="@dimen/title_tab_indicator_padding_horizontal"
        android:top="@dimen/title_tab_indicator_padding_top">
        <selector>
            <item android:state_selected="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/title_tab_indicator_selected" />
                </shape>
            </item>
        </selector>
    </item>
</layer-list>