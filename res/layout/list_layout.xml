<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:ptr="http://schemas.android.com/apk/res/com.xiaomei.yanyu"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:gravity="center">
   <com.xiaomei.yanyu.widget.pullrefreshview.PullToRefreshListView 
      android:id="@+id/list_1"
      android:divider="#00000000" 
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="#ffe2e2e2"
      android:scrollbarStyle="outsideOverlay"
      ptr:ptrMode="pullDownFromTop"
      android:visibility="visible"/>      
  <include  android:id="@+id/loading_layout_1"
      layout="@layout/loading_layout"
      android:visibility="visible"/>
  <include  android:id="@+id/empty_view_1"
      layout="@layout/empty_layout"
      android:visibility="gone"/> 
</FrameLayout>