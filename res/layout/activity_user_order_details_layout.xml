<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/color_background">
    
    <!-- 防止edittext自动活取焦点 -->
    <LinearLayout
        android:focusable="true" android:focusableInTouchMode="true"
        android:layout_width="0px" android:layout_height="0px">
        <requestFocus />
    </LinearLayout>
    
    <include layout="@layout/title_bar_layout"/>
<ScrollView 
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background">
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/color_background">
    

    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="20dp"
        android:background="@drawable/order_details_top_bg">
        <TextView 
            android:id="@+id/mechanism_name_txt"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#373737"
            android:text="机构名称：  "/>
         <TextView 
            android:id="@+id/mechanism_name"
            android:layout_toRightOf="@id/mechanism_name_txt"
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#373737"
            android:text="某一个外壳医院，呵呵呵呵"
            android:maxLines="1"/><!-- android:layout_toLeftOf="@id/mobile_name_txt" -->
        <TextView 
            android:layout_marginTop="5dp"
            android:id="@+id/mobile_name_txt"
            android:layout_below="@id/mechanism_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#373737"
            android:text="电话：  "/><!--  android:layout_toLeftOf="@id/mechanism_mobile" -->
            
        <TextView 
            android:layout_marginTop="5dp"
            android:id="@+id/mechanism_mobile"
            android:layout_toRightOf="@id/mechanism_name_txt"
            android:layout_below="@id/mechanism_name_txt"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:textColor="#373737"
            android:text="1342870367"/><!-- android:layout_alignParentRight="true" -->            

        <TextView 
            android:layout_marginTop="5dp"
            android:id="@+id/mechanism_location_txt"
            android:layout_below="@id/mobile_name_txt"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#373737"
            android:text="机构地址：  "/>         
         <TextView 
             android:layout_marginTop="5dp"
            android:id="@+id/mechanism_location"
            android:layout_below="@id/mobile_name_txt"
            android:layout_toRightOf="@id/mechanism_location_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#373737"
            android:text="首尔首尔首尔"/>            
    </RelativeLayout>
   	
    <RelativeLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="15dp"
        android:background="#ffffff">
         <ImageView 
             android:id="@+id/goods_icon"
             android:layout_alignParentLeft="true"
             android:layout_width="70dp"
             android:layout_height="55dp"
             />
         <TextView 
             android:id="@+id/goods_title"
             android:layout_toRightOf="@id/goods_icon"
             android:layout_alignTop="@id/goods_icon"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:textColor="#373737"
             android:textSize="13sp"
             android:text="suhu尚惠唇膏精品特惠"/>
         
         <TextView 
             android:id="@+id/goods_price"
             android:layout_toRightOf="@id/goods_icon"
             android:layout_alignBottom="@id/goods_icon"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:text="599.00"
             android:textColor="#d366f3"
             android:textSize="16sp"/>
         <TextView 
             android:id="@+id/goods_type"
             android:layout_alignBottom="@id/goods_icon"
             android:layout_toRightOf="@id/goods_price"
             android:layout_marginLeft="15dp"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:textSize="13sp"
             android:textColor="#b4b4b4"
             android:text="X1"
             android:visibility="gone"/>

    </RelativeLayout>
    
    <include android:id="@+id/item1" layout="@layout/item_user_order_details_layout"/>
    
    <include android:id="@+id/item2" layout="@layout/item_user_order_details_layout"/>
    
    <include android:id="@+id/item3" layout="@layout/item_user_order_details_layout"/>
    
    <include android:id="@+id/item4" layout="@layout/item_user_order_details_layout"/>
    
    <include android:id="@+id/item5" layout="@layout/item_user_order_details_layout"/>
    
    <include android:id="@+id/item6" layout="@layout/item_user_order_details_layout"/>
   
    <TextView 
        android:id="@+id/order_status"
        android:paddingTop="20dp"
        android:paddingRight="15dp"
        android:paddingBottom="20dp"
        android:textColor="#969696"
        android:textSize="17sp"
        android:text="取消订单"
        android:gravity="right"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>
    
<RelativeLayout 
    android:id="@+id/pay_title_layout"
    android:layout_width="match_parent"
    android:layout_height="46dp">
    <TextView 
        android:layout_margin="10dp"
        android:id="@+id/title"
        android:textSize="16sp"
        android:textColor="#646464"
        android:layout_alignParentLeft="true"
        android:text="@string/pay_type"
        android:layout_centerVertical="true"
    	android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
    
    <View 
        android:id="@+id/pay_divild"
        android:layout_alignParentBottom="true"
        android:background="#e2e2e2"
    	android:layout_height="1px"        
        android:layout_width="match_parent"/>
</RelativeLayout>
    
	<LinearLayout 
	   android:id="@+id/pay_layout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical" 
       android:background="@color/color_white">
    <!-- 微信支付 -->
	    <RelativeLayout
	        android:id="@+id/pay_weixin"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" 
	        android:padding="15dp">
	        <ImageView 
	        android:id="@+id/pay_icon_weixin"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 	            
	        android:src="@drawable/weixing"/>
			<TextView 
			    android:layout_marginLeft="5dp"
			    android:layout_toRightOf="@id/pay_icon_weixin"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="@string/pay_weixin"/>	        
			<TextView 
			    android:layout_marginLeft="5dp"
			    android:layout_toRightOf="@id/pay_icon_weixin"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignBottom="@id/pay_icon_weixin"
			    android:text="@string/pay_weixin_safety"/>
	        <ImageView 
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 	            
		        android:src="@drawable/next_icon"/>
	    </RelativeLayout>
		    
	    <View 
	        android:layout_marginLeft="15dp"
	        android:background="#e2e2e2"
	    	android:layout_height="1px"        
	    	android:visibility="gone"
	        android:layout_width="match_parent"/>
		    
	        <!-- 支付宝支付 -->
	    
	      <RelativeLayout
	        android:id="@+id/pay_zhifubao"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" 
	        android:padding="15dp">
	        <ImageView 
	        android:id="@+id/pay_icon_zhifubao"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 	            
	        android:src="@drawable/zhifubao"/>
			<TextView 
			    android:layout_marginLeft="5dp"
			    android:layout_toRightOf="@id/pay_icon_zhifubao"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="@string/pay_zhifubao"/>	        
			<TextView 
			    android:layout_marginLeft="5dp"
			    android:layout_toRightOf="@id/pay_icon_zhifubao"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignBottom="@id/pay_icon_zhifubao"
			    android:text="@string/pay_zhifubao_safety"/>
	        <ImageView 
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 	            
		        android:src="@drawable/next_icon"/>
	    </RelativeLayout>
	</LinearLayout>
	
	

</LinearLayout>
</ScrollView>
	<include  android:id="@+id/loading_layout"
	    layout="@layout/loading_layout"
	    android:visibility="visible"/>
	</LinearLayout>