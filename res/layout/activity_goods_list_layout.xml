<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:ptr="http://schemas.android.com/apk/res/com.xiaomei.yanyu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/color_background">
    
    <include  layout="@layout/title_bar_layout"   />
    
    <RelativeLayout 
        android:id="@+id/container"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >
            
        <include
            android:id="@+id/filter"
            layout="@layout/top_filter" />
        
 <com.xiaomei.yanyu.widget.pullrefreshview.PullToRefreshListView 
     android:divider="@color/divider"
     android:dividerHeight="@dimen/divider"
    android:id="@+id/list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/filter"
    android:background="#ffe2e2e2"
    android:scrollbarStyle="outsideOverlay"
    android:showDividers="middle|end"
    ptr:ptrMode="pullDownFromTop"
    android:visibility="visible"/>     
    
    <include
        android:id="@android:id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/goods_list_empty_view" />
 
     <include  android:id="@+id/loading_layout"
        layout="@layout/loading_layout"
        android:visibility="visible"/>
     </RelativeLayout>
</LinearLayout>
