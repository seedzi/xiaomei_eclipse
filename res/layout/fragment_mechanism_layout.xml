<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res/com.xiaomei.yanyu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <include   layout="@layout/title_bar_layout"  android:id="@+id/title_bar"/>
        
    <RelativeLayout
         android:layout_width="match_parent"
    	android:layout_height="match_parent"
		android:gravity="center" >
        
    <com.xiaomei.yanyu.widget.pullrefreshview.PullToRefreshListView
        android:id="@+id/list"
        style="@style/ListView"
        android:scrollbarStyle="outsideOverlay"
        ptr:ptrMode="pullDownFromTop" />
    
	    <include  android:id="@+id/loading_layout"
        layout="@layout/loading_layout"
        android:visibility="visible"/>
	    
    		<include  android:id="@+id/empty_view"
	    layout="@layout/empty_layout"
	    android:visibility="gone"/>
	</RelativeLayout>
</LinearLayout>
