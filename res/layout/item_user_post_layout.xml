<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:ptr="http://schemas.android.com/apk/res/com.xiaomei.yanyu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="#ffffff">
    <RelativeLayout 
       android:layout_marginTop="15dp"
       android:layout_width="match_parent"  
       android:layout_height="wrap_content" 
       android:orientation="horizontal"
       android:gravity="center_vertical">
       <!-- 发帖用户的icon -->
       <com.xiaomei.yanyu.widget.CircleImageView 
           android:id="@+id/poster_user_icon"
           android:layout_marginLeft="15dp"
           android:layout_height="33dp"
           android:layout_width="33dp"
           android:src="@drawable/address_web"/>
       <!-- 发帖用户名 -->
       <TextView 
           android:id="@+id/poster_user_name"
           android:textSize="15sp"
           android:textColor="#1e1e1e"
           android:layout_marginLeft="9dp"
           android:layout_centerVertical="true"
           android:layout_toRightOf="@id/poster_user_icon"
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:text="阳光灿烂的小阿伦"
           /> 
       <!-- 发帖时间 -->  
       <TextView 
           android:id="@+id/poster_user_time"
           android:textColor="#969696"
           android:textSize="12sp"
           android:layout_marginRight="15dp"
           android:layout_centerVertical="true"
           android:layout_alignParentRight="true"
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:text="2015-03-05"/>       
    </RelativeLayout>
    
    
    <!-- 文字内容 -->   
    <TextView 
        android:id="@+id/poster_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        android:textColor="#000000"
        android:lineSpacingExtra="9dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"/>
    
    <!-- 图片 -->
    <LinearLayout 
        android:layout_marginLeft="32dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
      <ImageView 
          android:id="@+id/img1"
          android:scaleType="fitXY"
          android:layout_height="wrap_content"
          android:layout_width="wrap_content"/>
      <ImageView 
          android:id="@+id/img2"
          android:scaleType="fitXY"
          android:layout_marginLeft="8dp"
          android:layout_marginRight="8dp"
          android:layout_height="wrap_content"
          android:layout_width="wrap_content"/>
      <ImageView 
          android:id="@+id/img3"
           android:scaleType="fitXY"
          android:layout_height="wrap_content"
          android:layout_width="wrap_content"/>
    </LinearLayout>
    
    <RelativeLayout 
        android:layout_marginTop="21dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp">
      
        <TextView 
            android:id="@+id/comment_size"
            android:textColor="#969696"
            android:textSize="11sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="365"/>
        <ImageView 
            android:id="@+id/comment_icon"
            android:layout_toLeftOf="@id/comment_size"
            android:layout_marginRight="4dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/poster_comment"/>
        
        <TextView 
            android:id="@+id/fav_size"
            android:layout_marginRight="22dp"
            android:layout_toLeftOf="@id/comment_icon"
            android:textColor="#969696"
            android:textSize="11sp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="237"/>
        <ImageView 
            android:id="@+id/fav_icon"
            android:layout_toLeftOf="@id/fav_size"
            android:layout_marginRight="4dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/poster_like"/>
        
         <TextView 
            android:id="@+id/browse_size"
            android:layout_marginRight="22dp"
            android:layout_toLeftOf="@id/fav_icon"
            android:textColor="#969696"
            android:textSize="11sp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="237"/>
        <ImageView 
            android:id="@+id/browse_icon"
            android:layout_toLeftOf="@id/browse_size"
            android:layout_marginRight="4dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/poster_browser"/>
    </RelativeLayout>
    
    <View 
        android:layout_marginTop="15dp"
        android:background="@color/divider"
        android:layout_height="1px"
        android:layout_width="match_parent"
        />
    <include android:id="@+id/commont_1" layout="@layout/user_post_commont_item_layout" />
    <include android:id="@+id/commont_2" layout="@layout/user_post_commont_item_layout" />
    <include android:id="@+id/commont_3" layout="@layout/user_post_commont_item_layout" />
     <TextView
         android:id="@+id/more_commont"
         android:gravity="center" 
         android:text="更多评论 >>"
         android:layout_height="44dp"
         android:layout_width="match_parent"
         android:textSize="15sp"
         android:textColor="#646464"
         />
     <View 
         android:layout_height="20dp"
         android:layout_width="match_parent"
         android:background="@color/color_background"/>
</LinearLayout>
