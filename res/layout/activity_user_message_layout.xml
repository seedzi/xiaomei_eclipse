<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_white">
    
        <include layout="@layout/title_bar_layout"/>
    
<RelativeLayout 
    android:id="@+id/message"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     >
    
    <ImageView 
        android:id="@+id/icon"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="14dp"
        
        android:layout_width="@dimen/item_icon_size_smaill"
        android:layout_height="@dimen/item_icon_size_smaill"        
        android:src="@drawable/icon_system_message"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@id/icon"
        android:layout_marginTop="14dp"
        android:orientation="vertical">
        <TextView 
        android:id="@+id/title"
        android:textSize="17sp"
        android:textColor="#373737"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"            
        android:text="系统消息"/>
        <TextView 
         android:layout_marginTop="2dp"
        android:id="@+id/content"
        android:textSize="15sp"
        android:textColor="#aaaaaa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"           
        android:text="点击查看更多详细系统消息"/> 
    </LinearLayout>
</RelativeLayout>

    <View
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/icon"    
        android:layout_marginLeft="@dimen/item_margin_normal"
        android:layout_width="match_parent"
        android:layout_height="2px"                 
        android:background="#e4e4e4"/>
    
    <RelativeLayout 
        android:id="@+id/shopping"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:paddingBottom="15dp">
    
    <ImageView 
        android:id="@+id/icon2"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="14dp"
        
        android:layout_width="@dimen/item_icon_size_smaill"
        android:layout_height="@dimen/item_icon_size_smaill"        
        android:src="@drawable/icon_shopping"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@id/icon2"
        android:layout_marginTop="14dp"
        android:orientation="vertical">
        <TextView 
        android:textSize="17sp"
        android:textColor="#373737"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"            
        android:text="商品促销消息"/>
        <TextView 
         android:layout_marginTop="2dp"
        android:textSize="15sp"
        android:textColor="#aaaaaa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"           
        android:text="点击查看更多商品促销活动哦~"/> 
    </LinearLayout>
</RelativeLayout>
    </LinearLayout>
