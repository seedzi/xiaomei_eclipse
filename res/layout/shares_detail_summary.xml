<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/pager_item_space_vertical"
    android:paddingBottom="@dimen/pager_item_space_vertical"
    android:paddingLeft="@dimen/content_padding_horizontal"
    android:paddingRight="@dimen/content_padding_horizontal">

    <TextView
        android:id="@+id/detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/avatar"
        android:layout_marginBottom="10dp"
        android:textSize="16sp"
        android:textColor="@android:color/white"/>

    <com.xiaomei.yanyu.widget.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/item_icon_size_smaill_most"
        android:layout_height="@dimen/item_icon_size_smaill_most"
        android:layout_above="@id/description"
        android:layout_marginBottom="@dimen/shares_detail_summary_space_vertical"/>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/avatar"
        android:layout_alignBottom="@+id/avatar"
        android:layout_toRightOf="@+id/avatar"
        android:layout_marginLeft="11dp"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/num_views"
        android:layout_marginBottom="@dimen/shares_detail_summary_space_vertical"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:lineSpacingMultiplier="1.2"/>

    <TextView
        android:id="@+id/num_views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textSize="11sp"
        android:textColor="@android:color/white"/>
</RelativeLayout>
