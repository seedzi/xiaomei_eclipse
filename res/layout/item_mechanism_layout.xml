<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white">
    
    <ImageView 
        android:id="@+id/icon"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/novel_cover_default4"/>

    <TextView 
        android:id="@+id/title"
        android:text="我们会让你成为一颗闪亮之星"
        android:layout_width="match_parent"        
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@id/icon"
        android:layout_marginBottom="10dp"/>
    
    <TextView 
        android:id="@+id/hospital"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/title"
        android:text="J-Star整形外科医院"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        />
    
        
    <TextView 
        android:id="@+id/location"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/title"
        android:layout_alignParentRight="true"
        android:text="江南 首尔区"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:drawableLeft="@drawable/address_web"/>
    
    <TextView 
        android:id="@+id/server"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/hospital"
        android:textSize="@dimen/txt_small_size_sp"
        android:text="服务4.5"/>
    
     <TextView 
        android:id="@+id/effect"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/server"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/hospital"
        android:textSize="@dimen/txt_small_size_sp"
        android:text="效果4.5"/>
     
	<TextView 
        android:id="@+id/environmental"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/effect"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/hospital"
        android:textSize="@dimen/txt_small_size_sp"
        android:text="环境4.0"/>
</RelativeLayout>
