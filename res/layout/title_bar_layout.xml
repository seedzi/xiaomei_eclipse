<?xml version="1.0" encoding="utf-8"?>
<com.xiaomei.widget.TitleBar  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titlebar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bar_heigt"
    android:background="@color/color_titlebar_background"
    android:orientation="vertical" >
    
<ImageButton 
    android:id="@+id/back"
    android:layout_gravity="center_vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"        
    android:layout_marginLeft="@dimen/item_margin_normal"
    android:visibility="gone"
    android:background="@drawable/back"/>    
    
	<LinearLayout 
	    android:id="@+id/center_container"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:visibility="gone">
	    <Button 
	        android:id="@+id/login"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"/>
	    <Button 
	        android:id="@+id/register"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"/>	    
	</LinearLayout>

<TextView 
    android:id="@+id/title"
    android:textSize="25sp"
    android:textColor="#727272"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    
</com.xiaomei.widget.TitleBar>
