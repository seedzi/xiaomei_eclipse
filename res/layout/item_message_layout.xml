<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:paddingTop="15dp"
    android:background="@color/color_white" >
    
	<ImageView 
	    android:id="@+id/icon"
	    android:layout_marginLeft="@dimen/item_margin_normal"
	    android:layout_marginTop="@dimen/item_margin_normal"
	    android:layout_marginBottom="@dimen/item_margin_normal"
    	android:layout_width="@dimen/item_icon_size_smaill"
    	android:layout_height="@dimen/item_icon_size_smaill"	    
    	android:layout_centerVertical="true"
	    android:src="@drawable/icon_system_message"/>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="@dimen/item_margin_small"
	   	android:layout_toRightOf="@id/icon"
	    android:layout_marginTop="@dimen/item_margin_small_most"
	    android:layout_centerVertical="true"
	    android:orientation="vertical">
	    <TextView 
	    android:id="@+id/title"
	    android:textSize="24sp"
	    android:textColor="#373737"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"	   	    
	    android:text="系统消息"/>
		<TextView 
		 android:layout_marginTop="2dp"
	    android:id="@+id/content"
	    android:textSize="20sp"
	    android:textColor="#aaaaaa"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"	   	   
	    android:text="商品促销信息"/>	
	</LinearLayout>
	

	<View
	    android:layout_marginTop="15dp"
	    android:layout_alignParentBottom="true"
		android:layout_toRightOf="@id/icon"    
		android:layout_marginLeft="@dimen/item_margin_normal"
    	android:layout_width="match_parent"
    	android:layout_height="2px"	   			    
		android:background="#e4e4e4"/>

</RelativeLayout>
