<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res/com.xiaomei.yanyu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/color_background">
    
    <include layout="@layout/title_bar_layout"/>
    
    <FrameLayout 
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
	<com.xiaomei.yanyu.widget.pullrefreshview.PullToRefreshListView 
	    android:id="@+id/list"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@color/color_background"
	    android:scrollbarStyle="outsideOverlay"
	    ptr:ptrMode="pullDownFromTop"
	    android:visibility="visible"/> 
    
	    <include  android:id="@+id/loading_layout"
        layout="@layout/loading_layout"
        android:visibility="visible"/>
	    
	<include  android:id="@+id/empty_view"
	    layout="@layout/order_no_data_layout"
	    android:visibility="gone"/> 	
	        </FrameLayout>
</LinearLayout>
