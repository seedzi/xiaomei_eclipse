<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:ptr="http://schemas.android.com/apk/res/com.xiaomei.yanyu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <include  layout="@layout/title_bar_layout" android:id="@+id/title_bar"/>
    
    <LinearLayout 
        android:layout_height="48dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2">
        <FrameLayout 
            android:id="@+id/jing_hua"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            >
        <TextView 
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:textColor="#000000"
            android:gravity="center"
           android:text="精华"/>    
           <View
               android:layout_gravity="center|bottom"
               android:layout_width="84dp"
               android:layout_height="2dp"
               android:background="#c96cf1"/>
        </FrameLayout>
    
      <FrameLayout 
            android:id="@+id/guang_chang"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            >
        <TextView 
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center"
           android:text="广场"/>    
           <View
               android:layout_gravity="center|bottom"
               android:layout_width="84dp"
               android:layout_height="2dp"
               android:background="#c96cf1"/>
        </FrameLayout>
    </LinearLayout>
    
    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
            <!-- 精华 -->
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
         <com.xiaomei.yanyu.widget.pullrefreshview.PullToRefreshListView 
            android:id="@+id/list"
            android:divider="#00000000" 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffe2e2e2"
            android:scrollbarStyle="outsideOverlay"
            ptr:ptrMode="pullDownFromTop"
            android:visibility="visible"/>      
            <include  android:id="@+id/loading_layout"
                layout="@layout/loading_layout"
                android:visibility="visible"/>
            <include  android:id="@+id/empty_view"
                layout="@layout/empty_layout"
                android:visibility="gone"/> 
        </RelativeLayout>
        
          <!-- 广场 -->
      <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
		 <com.xiaomei.yanyu.widget.pullrefreshview.PullToRefreshListView 
		    android:id="@+id/list_1"
		    android:divider="#00000000" 
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:background="#ffe2e2e2"
		    android:scrollbarStyle="outsideOverlay"
		    ptr:ptrMode="pullDownFromTop"
		    android:visibility="visible"/>      
	    <include  android:id="@+id/loading_layout_1"
	        layout="@layout/loading_layout"
	        android:visibility="visible"/>
	    <include  android:id="@+id/empty_view_1"
	        layout="@layout/empty_layout"
	        android:visibility="gone"/> 
        </RelativeLayout>
    
      </FrameLayout>
</LinearLayout>
