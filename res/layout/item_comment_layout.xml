<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/color_white">

     <RelativeLayout 
         android:layout_marginLeft="15dp"
         android:layout_marginRight="15dp"
         android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <!-- com.xiaomei.widget.RoundAngleImageView-->
        <com.xiaomei.yanyu.widget.CircleImageView
          android:layout_marginTop="10dp"
          android:id="@+id/user_icon"  
          android:layout_height="28dp"
          android:layout_width="28dp"
          android:src="@drawable/icon_tianchognsuxing"/> 
        <TextView 
            android:id="@+id/user_name"
            android:layout_alignTop="@id/user_icon"
            android:layout_marginLeft="12dp"
            android:textSize="12sp"
            android:textColor="#333333"
            android:text="基调蔷薇"             
            android:gravity="center"
            android:layout_toRightOf="@id/user_icon"
            android:layout_height="28dp"
            android:layout_width="wrap_content"/>
        <TextView 
            android:id="@+id/user_sex"
            android:layout_alignBottom="@id/user_icon"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/user_icon"
            android:text="女"
            android:textSize="11sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:visibility="gone"/>  
         <TextView 
            android:id="@+id/user_location"
            android:layout_alignBottom="@id/user_icon"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/user_sex"
            android:text="北京"
            android:textSize="11sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:visibility="gone"/>  
          <TextView 
            android:id="@+id/create_time"
            android:layout_alignBottom="@id/user_icon"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dp"
            android:text="9小时前"
            android:textColor="#a0a0a0"
            android:textSize="11sp"
            android:gravity="center"
            android:layout_height="28dp"
            android:layout_width="wrap_content"/>     
           <TextView 
            android:id="@+id/comment_txt"
            android:layout_below="@id/user_icon"
            android:layout_toRightOf="@id/user_icon"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            android:lineSpacingMultiplier="1.2"
            android:text="我下午做手术我下午做手术我下午做手术我下午做手术我下午做手术我下午做手术我下午做手术我下午做手术我下午做手术"
            android:textColor="#333333"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>              
            
           <Button
               android:id="@+id/subcomment"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_alignParentBottom="true"
               android:background="@null"
               android:drawableLeft="@drawable/ic_subcomment"
               android:drawablePadding="10dp" />
     </RelativeLayout>
   
           <View 
             android:id="@+id/divider"
   			 android:layout_marginTop="3dp"	
	         android:background="#e4e4e4"
	         android:layout_marginLeft="15dp"
	         android:layout_width="match_parent"
	         android:layout_height="1px"
	         android:visibility="gone"/>

    <LinearLayout
        android:layout_marginTop="7dp"
        android:id="@+id/subcomment_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="57dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical" />
</LinearLayout>
