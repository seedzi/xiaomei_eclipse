<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_transparent"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">
    <TextView 
     android:id="@+id/browse_size"   
     android:layout_alignParentBottom="true"   
     android:text="4503次浏览"   
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"       
     android:textSize="11sp"
     android:textColor="@color/color_white"/>
    
    <TextView 
     android:id="@+id/description"   
     android:layout_above="@id/browse_size"   
     android:layout_marginBottom="28dp"
     android:text="巴黎的女人被公认是最漂亮、最有气质、最有情调的女人，助理前段时间去了巴黎，回来感叹到，巴黎的女人看起来不像传说中那么令人惊艳，气质出众，但她们不怕冷给人留下了深刻印象。这大冬天的，街上随处可见透肉黑丝，不论老少，甚至还有光腿的，更有一大把年纪还露腿穿裙子的，让我等裹成企鹅怕冷不怕丑的女人汗颜！
        想起前几天看到的一个笑话说，搞不懂女人冬天里上面穿棉袄，下面穿丝袜是为的什么？难道是鲜奶需要保温，而火腿需要冷藏？"   
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"       
     android:textSize="14sp"
     android:textColor="@color/color_white"/>
    
        <com.xiaomei.widget.CircleImageView
     android:id="@+id/icon"   
     android:layout_marginBottom="28dp"
     android:layout_above="@id/description"   
     android:layout_width="67dp"
     android:layout_height="67dp"
     android:background="@drawable/icon_tianchognsuxing"/>
        <LinearLayout 
     android:layout_toRightOf="@id/icon" 
     android:layout_alignBottom="@id/icon"
      android:layout_marginLeft="11dp"
     android:layout_width="wrap_content"
     android:layout_height="67dp" 
     android:gravity="center_vertical"
     android:orientation="vertical">
            <TextView 
                android:id="@+id/nick_name"
                android:textSize="12sp"
                     android:layout_width="wrap_content"
     		android:layout_height="wrap_content"       
             android:textColor="@color/color_white"
             android:text="基调蔷薇"/>
                <TextView 
                  android:id="@+id/sex_location"  
                  android:layout_marginTop="6dp"
                android:textSize="11sp"
                     android:layout_width="wrap_content"
     		android:layout_height="wrap_content"       
             android:textColor="@color/color_white"
             android:text="女     北京"/>
        </LinearLayout>
        
                   <TextView 
                       android:id="@+id/layout_title"
                       android:layout_above="@id/icon"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                     android:layout_width="wrap_content"
     		android:layout_height="wrap_content"       
             android:textColor="@color/color_white"
             android:text="做女人,身材必须要火辣~"/>     
</RelativeLayout>
