<?xml version="1.0" encoding="utf-8"?>
<!-- 推荐地区 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">
    <RelativeLayout 
        android:id="@+id/top"
        android:layout_alignParentTop="true"
        android:layout_height="45dp"
        android:layout_width="match_parent"
        android:background="#ffffff">
        <TextView 
            android:id="@+id/txt"
            android:textSize="17sp"
            android:textColor="#1e1e1e"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐地区"/>
        <TextView 
            android:id="@+id/more_buton"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#666666"
            android:textSize="13sp"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/arrow_right"
            android:layout_marginRight="12dp"
            android:text="更多"/>
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/home_item_space_horizontal"
        android:paddingRight="@dimen/home_item_space_horizontal"
        android:orientation="horizontal">
        <FrameLayout 
            android:layout_width="0dp" 
            android:layout_height="@dimen/home_area_item_height"
            android:layout_weight="1">
               <ImageView 
            android:id="@+id/img1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>
            <LinearLayout
				android:layout_height="wrap_content" 
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                android:weightSum="2">
                <TextView 
                    android:id="@+id/city_name1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="#ffffff"
                    android:textSize="17sp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"/>
                <TextView 
                    android:id="@+id/count1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textSize="17sp"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"/>
            </LinearLayout>
        </FrameLayout>
     

        <Space
            android:layout_width="@dimen/home_item_space_horizontal"
            android:layout_height="match_parent" />

        <FrameLayout 
            android:layout_width="0dp" 
            android:layout_height="@dimen/home_area_item_height"
            android:layout_weight="1">
               <ImageView 
            android:id="@+id/img2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>
            <LinearLayout
				android:layout_height="wrap_content" 
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                android:weightSum="2">
                <TextView 
                    android:id="@+id/city_name2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="#ffffff"
                    android:textSize="17sp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"/>
                <TextView 
                    android:id="@+id/count2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textSize="17sp"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/home_item_space_vertical"
        android:paddingLeft="@dimen/home_item_space_horizontal"
        android:paddingRight="@dimen/home_item_space_horizontal"
        android:orientation="horizontal">

      <FrameLayout 
            android:layout_width="0dp" 
            android:layout_height="@dimen/home_area_item_height"
            android:layout_weight="1">
               <ImageView 
            android:id="@+id/img3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>
            <LinearLayout
 				android:layout_height="wrap_content" 
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                android:weightSum="2">
                <TextView 
                    android:id="@+id/city_name3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="#ffffff"
                    android:textSize="17sp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"/>
                <TextView 
                    android:id="@+id/count3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textSize="17sp"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"/>
            </LinearLayout>
        </FrameLayout>

        <Space
            android:layout_width="@dimen/home_item_space_horizontal"
            android:layout_height="match_parent" />

        <FrameLayout 
            android:layout_width="0dp" 
            android:layout_height="@dimen/home_area_item_height"
            android:layout_weight="1">
               <ImageView 
            android:id="@+id/img4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>
            <LinearLayout
                android:layout_height="wrap_content" 
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                android:weightSum="2">
                <TextView 
                    android:id="@+id/city_name4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="#ffffff"
                    android:textSize="17sp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"/>
                <TextView 
                    android:id="@+id/count4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textSize="17sp"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
    <ImageView 
        android:id="@+id/recite"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/recommended_area_recite"/>
<View
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_divider_height"
    android:background="@color/color_background" />
</LinearLayout>
