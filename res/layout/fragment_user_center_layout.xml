<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    android:orientation="vertical" >

	<include 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/title_bar_heigt"
	    layout="@layout/title_bar_layout"
	    />

    <RelativeLayout
        android:id="@+id/user_info_layout"
        android:layout_width="match_parent"
        android:layout_height="124dp" 
        android:background="@drawable/gr_banner">

        <com.xiaomei.widget.CircleImageView
            android:id="@+id/user_icon"
            android:layout_width="@dimen/item_icon_size_normal"
            android:layout_height="@dimen/item_icon_size_normal"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/item_margin_normal"
            android:src="@drawable/joke_channel_offline_icon"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/item_margin_small"
            android:layout_toRightOf="@id/user_icon"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_pick_high"
                android:text="美美达" 
                android:textSize="@dimen/txt_big_size_sp"/>
            <TextView
                android:id="@+id/user_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="v2白金会员"
                android:textColor="@color/color_pick_high"
                android:textSize="@dimen/txt_normal_size_sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/item_margin_normal"
            android:src="@drawable/next_icon" />
    </RelativeLayout>

  		<View
	       	android:layout_width="match_parent"
	      	android:layout_height="@dimen/item_height_small"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <include android:id="@+id/line1"  layout="@layout/item_center_user_layout" />
        <include android:id="@+id/line2"  layout="@layout/item_center_user_layout" />
        
		<View
         	android:layout_width="match_parent"
        	android:layout_height="@dimen/item_height_small"/>
        
        <include android:id="@+id/line3"  layout="@layout/item_center_user_layout" />
        <include android:id="@+id/line4"  layout="@layout/item_center_user_layout" />
        
		<View
         	android:layout_width="match_parent"
        	android:layout_height="@dimen/item_height_small" />
        
        <include android:id="@+id/line5"  layout="@layout/item_center_user_layout" />
        <include android:id="@+id/line6"  layout="@layout/item_center_user_layout" />
    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>